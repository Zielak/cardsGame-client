{
  "compilerOptions": {
    "allowJs": true,
    // "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
